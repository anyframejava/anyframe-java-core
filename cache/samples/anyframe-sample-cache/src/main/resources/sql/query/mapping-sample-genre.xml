<?xml version="1.0" encoding="UTF-8"?>
<queryservice xmlns="http://www.anyframejava.org/schema/query/mapping" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.anyframejava.org/schema/query/mapping http://www.anyframejava.org/schema/query/mapping/anyframe-query-mapping-1.0.xsd ">
	<queries>
		<query id="createGenre">
			<statement>
				INSERT INTO GENRE (genre_id, name)
				VALUES (:vo.genreId, :vo.name)
			</statement>
		</query>

		<query id="updateGenre">
			<statement>
				UPDATE GENRE 
				SET name = :vo.name
				WHERE genre_id = :vo.genreId
			</statement>
		</query>

		<query id="removeGenre">
			<statement>
				DELETE FROM GENRE 
				WHERE genre_id = :vo.genreId
			</statement>
		</query>
		
		<query id="findGenreByPk">
			<statement>
				SELECT genre_id, name
				FROM GENRE
				WHERE genre_id = :vo.genreId
			</statement>
			<result class="org.anyframe.sample.domain.Genre" />
		</query>
					
		<query id="findGenreList" isDynamic="false">
			<statement>
				SELECT genre_id, name
				FROM GENRE
				ORDER BY name
			</statement>
			<result class="org.anyframe.sample.domain.Genre" />
		</query>
	</queries>
</queryservice>